// Edit Test Page Styles
.edit-test-page {
  min-height: 100vh;
  background: var(--background);
}

.page-header {
  background: var(--surface);
  border-bottom: 1px solid var(--border);
  padding: 2rem 0;

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .header-content {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .header-text {
    display: flex;
    align-items: center;
    gap: 1rem;
    
    h1 {
      color: var(--text-primary);
      margin: 0;
    }
    
    p {
      color: var(--text-secondary);
      margin: 0;
    }
  }
}

.main-content {
  padding: 2rem 0;
  
  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }
}

// Loading State
.loading-container {
  padding: 3rem 0;
}

.loading-card {
  max-width: 500px;
  margin: 0 auto;
  background: var(--surface);
  border: 1px solid var(--border);
  border-radius: 12px;
  box-shadow: var(--shadow-sm);
}

.loading-spinner {
  width: 40px;
  height: 40px;
  border: 3px solid var(--border);
  border-top-color: var(--primary);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 1rem;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

// Form Styles
.form-group {
  margin-bottom: 1rem;
}

.form-label {
  display: block;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 0.5rem;
  font-size: 0.875rem;
}

.form-control {
  width: 100%;
  padding: 0.75rem;
  border: 1px solid var(--border);
  border-radius: 8px;
  background: var(--surface);
  color: var(--text-primary);
  font-size: 0.875rem;
  transition: all 0.2s ease;

  &:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 0 3px var(--primary-light);
  }

  &::placeholder {
    color: var(--text-muted);
  }
}

// Buttons
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  border-radius: 8px;
  font-weight: 600;
  text-decoration: none;
  border: 1px solid transparent;
  transition: all 0.2s ease;
  cursor: pointer;
  font-size: 0.875rem;

  &:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  &.btn-primary {
    background: var(--primary);
    color: var(--text-on-primary);
    border-color: var(--primary);

    &:hover:not(:disabled) {
      background: var(--primary-hover);
      border-color: var(--primary-hover);
    }
  }

  &.btn-default {
    background: var(--surface);
    color: var(--text-secondary);
    border-color: var(--border);

    &:hover:not(:disabled) {
      background: var(--surface-variant);
      color: var(--text-primary);
    }
  }

  &.btn-outline {
    background: transparent;
    color: var(--primary);
    border-color: var(--primary);

    &:hover:not(:disabled) {
      background: var(--primary);
      color: var(--text-on-primary);
    }
  }

  &.w-full {
    width: 100%;
  }

  &.loading {
    opacity: 0.7;
    cursor: wait;
  }
}

.btn-icon {
  width: 32px;
  height: 32px;
  border-radius: 8px;
  border: 1px solid var(--border);
  background: var(--surface);
  color: var(--text-secondary);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  cursor: pointer;

  &:hover {
    background: var(--surface-variant);
    color: var(--text-primary);
  }

  &.btn-danger {
    &:hover {
      background: var(--danger);
      color: white;
      border-color: var(--danger);
    }
  }
}

// Questions Section
.questions-section {
  background: var(--surface);
  border: 1px solid var(--border);
  border-radius: 12px;
  
  .questions-list {
    max-height: 70vh;
    overflow-y: auto;
    padding-right: 8px;
  }
  
  .question-card {
    background: var(--surface-secondary);
    border: 1px solid var(--border);
    border-radius: 12px;
    transition: all 0.2s ease;
    
    &:hover {
      border-color: var(--primary);
      box-shadow: var(--shadow-sm);
    }
  }
  
  .question-header {
    border-bottom: 1px solid var(--border);
    padding-bottom: 0.75rem;
    margin-bottom: 1rem;
  }
  
  .option-label {
    font-weight: 600;
    color: var(--text-secondary);
    min-width: 24px;
  }
  
  .empty-questions {
    background: var(--surface-secondary);
    border: 2px dashed var(--border);
    color: var(--text-muted);
  }
}

// Grid Layout
.grid {
  display: grid;
  gap: 1.5rem;
}

.grid-cols-1 {
  grid-template-columns: repeat(1, minmax(0, 1fr));
}

@media (min-width: 1024px) {
  .lg\\:grid-cols-3 {
    grid-template-columns: repeat(3, minmax(0, 1fr));
  }
  
  .lg\\:col-span-1 {
    grid-column: span 1 / span 1;
  }
  
  .lg\\:col-span-2 {
    grid-column: span 2 / span 2;
  }
}

// Utility Classes
.h-fit {
  height: fit-content;
}

.space-y-3 > * + * {
  margin-top: 0.75rem;
}

.flex {
  display: flex;
}

.items-center {
  align-items: center;
}

.justify-between {
  justify-content: space-between;
}

.justify-end {
  justify-content: flex-end;
}

.gap-3 {
  gap: 0.75rem;
}

.mb-2 { margin-bottom: 0.5rem; }
.mb-4 { margin-bottom: 1rem; }
.mb-6 { margin-bottom: 1.5rem; }
.mr-4 { margin-right: 1rem; }
.mt-6 { margin-top: 1.5rem; }

.text-lg {
  font-size: 1.125rem;
  line-height: 1.75rem;
}

.text-3xl {
  font-size: 1.875rem;
  line-height: 2.25rem;
}

.font-bold {
  font-weight: 700;
}

.font-semibold {
  font-weight: 600;
}

.text-primary {
  color: var(--text-primary);
}

.text-secondary {
  color: var(--text-secondary);
}

.text-danger {
  color: var(--danger);
}

.text-sm {
  font-size: 0.875rem;
  line-height: 1.25rem;
}

.flex-1 {
  flex: 1 1 0%;
}

.min-w-24 {
  min-width: 24px;
}
