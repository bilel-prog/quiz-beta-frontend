<div class="edit-test-page">
  <!-- Header -->
  <div class="page-header">
    <div class="container">
      <div class="header-content">
        <div class="header-text">
          <button class="btn btn-default mr-4" (click)="goBack()">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M19 12H6m0 0l7-7m-7 7l7 7"/>
            </svg>
            Back to My Tests
          </button>
          <h1 class="text-3xl font-bold text-primary mb-2">Edit Test</h1>
          <p class="text-secondary" *ngIf="test">{{ test.title }}</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Loading State -->
  <div *ngIf="isLoading" class="loading-container">
    <div class="container">
      <div class="loading-card card p-8 text-center">
        <div class="loading-spinner"></div>
        <p class="text-secondary">Loading test details...</p>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div *ngIf="!isLoading && test" class="main-content">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        
        <!-- Test Details Form -->
        <div class="lg:col-span-1">
          <nz-card nzTitle="Test Information" class="h-fit">
            <form [formGroup]="testForm" (ngSubmit)="updateTest()">
              <div class="form-group mb-4">
                <label class="form-label">Test Title</label>
                <input 
                  type="text" 
                  class="form-control" 
                  formControlName="title"
                  placeholder="Enter test title">
                <div *ngIf="testForm.get('title')?.invalid && testForm.get('title')?.touched" 
                     class="text-danger text-sm mt-1">
                  Test title is required (min 3 characters)
                </div>
              </div>

              <div class="form-group mb-4">
                <label class="form-label">Description</label>
                <textarea 
                  class="form-control" 
                  formControlName="description"
                  placeholder="Enter test description"
                  rows="4">
                </textarea>
                <div *ngIf="testForm.get('description')?.invalid && testForm.get('description')?.touched" 
                     class="text-danger text-sm mt-1">
                  Description is required (min 10 characters)
                </div>
              </div>

              <div class="form-group mb-6">
                <label class="form-label">Time per Question (seconds)</label>
                <input 
                  type="number" 
                  class="form-control" 
                  formControlName="timePerQuestion"
                  placeholder="60"
                  min="10"
                  max="300">
                <div *ngIf="testForm.get('timePerQuestion')?.invalid && testForm.get('timePerQuestion')?.touched" 
                     class="text-danger text-sm mt-1">
                  Time must be between 10 and 300 seconds
                </div>
              </div>

              <button 
                type="submit"
                class="btn btn-primary w-full"
                [disabled]="testForm.invalid"
                [class.loading]="isSaving">
                <span *ngIf="!isSaving">Update Test Details</span>
                <span *ngIf="isSaving">Updating...</span>
              </button>
            </form>
          </nz-card>
        </div>

        <!-- Questions Section -->
        <div class="lg:col-span-2">
          <nz-card class="questions-section">
            <div nz-card-header class="flex justify-between items-center">
              <h3 class="text-lg font-semibold">Questions ({{ questions.length }})</h3>
              <button class="btn btn-primary" (click)="addNewQuestion()">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="12" y1="5" x2="12" y2="19"/>
                  <line x1="5" y1="12" x2="19" y2="12"/>
                </svg>
                Add Question
              </button>
            </div>

            <!-- Questions List -->
            <div class="questions-list mt-6">
              <div *ngFor="let question of questions; let i = index" 
                   class="question-card mb-6 p-6 border border-gray-200 rounded-lg bg-gray-50">
                
                <div class="question-header mb-4">
                  <div class="flex justify-between items-center">
                    <h4 class="font-semibold text-gray-800">Question {{ i + 1 }}</h4>
                    <button class="btn-icon btn-danger" (click)="removeQuestion(i)">
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="3,6 5,6 21,6"/>
                        <path d="M19,6V20a2,2,0,0,1-2,2H7a2,2,0,0,1-2-2V6M8,6V4a2,2,0,0,1,2-2h4a2,2,0,0,1,2,2V6"/>
                      </svg>
                    </button>
                  </div>
                </div>

                <div class="question-content">
                  <!-- Question Text -->
                  <div class="form-group mb-4">
                    <label class="form-label">Question Text</label>
                    <textarea 
                      class="form-control" 
                      [(ngModel)]="question.questionText"
                      placeholder="Enter your question here..."
                      rows="3">
                    </textarea>
                  </div>

                  <!-- Options -->
                  <div class="form-group mb-4">
                    <label class="form-label">Answer Options</label>
                    <div class="options-grid space-y-3">
                      <div class="option-input">
                        <div class="flex items-center gap-3">
                          <span class="option-label font-semibold text-gray-600 min-w-24">
                            A.
                          </span>
                          <input 
                            type="text" 
                            class="form-control flex-1" 
                            [(ngModel)]="question.optionA"
                            placeholder="Option A">
                        </div>
                      </div>
                      <div class="option-input">
                        <div class="flex items-center gap-3">
                          <span class="option-label font-semibold text-gray-600 min-w-24">
                            B.
                          </span>
                          <input 
                            type="text" 
                            class="form-control flex-1" 
                            [(ngModel)]="question.optionB"
                            placeholder="Option B">
                        </div>
                      </div>
                      <div class="option-input">
                        <div class="flex items-center gap-3">
                          <span class="option-label font-semibold text-gray-600 min-w-24">
                            C.
                          </span>
                          <input 
                            type="text" 
                            class="form-control flex-1" 
                            [(ngModel)]="question.optionC"
                            placeholder="Option C">
                        </div>
                      </div>
                      <div class="option-input">
                        <div class="flex items-center gap-3">
                          <span class="option-label font-semibold text-gray-600 min-w-24">
                            D.
                          </span>
                          <input 
                            type="text" 
                            class="form-control flex-1" 
                            [(ngModel)]="question.optionD"
                            placeholder="Option D">
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- Correct Answer -->
                  <div class="form-group mb-4">
                    <label class="form-label">Correct Answer</label>
                    <select 
                      class="form-control" 
                      [(ngModel)]="question.correctAnswer">
                      <option value="">Select the correct answer</option>
                      <option value="A">A - {{ question.optionA }}</option>
                      <option value="B">B - {{ question.optionB }}</option>
                      <option value="C">C - {{ question.optionC }}</option>
                      <option value="D">D - {{ question.optionD }}</option>
                    </select>
                    <small class="help-text">Select which option (A, B, C, or D) contains the correct answer</small>
                  </div>

                  <!-- Save Question Button -->
                  <div class="flex justify-end">
                    <button class="btn btn-outline" (click)="saveQuestion(i)">
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"/>
                        <polyline points="17,21 17,13 7,13 7,21"/>
                        <polyline points="7,3 7,8 15,8"/>
                      </svg>
                      {{ question.id ? 'Update Question' : 'Save Question' }}
                    </button>
                  </div>
                </div>
              </div>

              <!-- Empty Questions State -->
              <div *ngIf="questions.length === 0" 
                   class="empty-questions text-center py-12 border-2 border-dashed border-gray-300 rounded-lg bg-gray-50">
                <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="mx-auto mb-4 text-gray-400">
                  <circle cx="12" cy="12" r="10"/>
                  <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
                  <line x1="12" y1="17" x2="12.01" y2="17"/>
                </svg>
                <h3 class="text-lg font-semibold text-gray-600 mb-2">No questions added yet</h3>
                <p class="text-gray-500 mb-4">Start building your test by adding questions</p>
                <button class="btn btn-primary" (click)="addNewQuestion()">
                  Add Your First Question
                </button>
              </div>
            </div>
          </nz-card>
        </div>
      </div>
    </div>
  </div>
</div>
